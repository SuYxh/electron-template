{
  "name": "electron-template",
  "version": "1.0.0",
  "description": "Electron template with React, Vite, TypeScript",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "node node_modules/vite/bin/vite.js",
    "dev:electron": "concurrently -k \"node node_modules/vite/bin/vite.js\" \"pnpm run electron:dev\"",
    "electron:dev": "node node_modules/typescript/bin/tsc -p tsconfig.node.json && node node_modules/electron/cli.js .",
    "build": "node node_modules/typescript/bin/tsc -p tsconfig.node.json && node node_modules/vite/bin/vite.js build",
    "build:electron": "pnpm run build && electron-builder",
    "build:mac": "pnpm run build && electron-builder --mac",
    "build:win": "pnpm run build && electron-builder --win",
    "build:linux": "pnpm run build && electron-builder --linux",
    "release": "pnpm run build && electron-builder --publish always",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "typecheck:node": "tsc -p tsconfig.node.json --noEmit"
  },
  "keywords": [
    "electron",
    "react",
    "vite",
    "typescript",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.4",
    "better-sqlite3": "^12.6.2",
    "concurrently": "^9.2.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "eslint": "^10.0.0",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "less": "^4.5.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
